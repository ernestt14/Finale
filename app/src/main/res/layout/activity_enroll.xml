<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Total Credits TextView (Top) -->
    <TextView
        android:id="@+id/totalCreditsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Credits is 24."
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- ScrollView for Subjects List (Middle) -->
    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/subjectsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </android.widget.ScrollView>

    <!-- Enroll Button (Bottom) -->
    <Button
        android:id="@+id/enrollButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enroll Selected Subjects"
        android:enabled="false" />

</android.widget.LinearLayout>
